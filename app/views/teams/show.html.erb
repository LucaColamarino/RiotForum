        background-image: url('/assets/sfondo-team.jpg'); 
        background-size: cover; 
        background-repeat: no-repeat;
        
        height: 100vh;

        display:flex;
        flex-direction:column;

    }

    .tabella-team {
        flex:3;

        display:flex;
        flex-direction:column;
        border:2px solid white;

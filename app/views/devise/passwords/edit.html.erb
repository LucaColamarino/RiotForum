<div class="d-flex justify-content-center align-items-center vh-100 wrapper">
  <div class="text-center card">
 <%= stylesheet_link_tag "devise", "data-turbo-track": "reload" %>

<h2>Modifica la password</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field">
    <%= f.label :password, "Nuova password" %><br />
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> caratteri minimo)</em><br />
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "Confirm new password" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Cambia la mia password",class:"btn btn-light mt-4" %>
  </div>
<% end %>

</div>
</div>




<%= render "devise/shared/links" %>

<head>
    <title> RiotForum </title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

    <%= stylesheet_link_tag "home", "data-turbo-track": "reload" %>
</head>

<body>
     <% if(session[:game]=="LOL"); @parentclass="LOL-home" end %>
     <% if(session[:game]=="VALO"); @parentclass="VALO-home" end %>
    <div class="parent", id=<%=@parentclass%>>



        <!-- CREA TEAM, CERCA GIOCATORI -->
        <div class="team-section">

            <img src="/assets/miniatura-<%= session[:game] %>.png" width="45%" height="60%">

  <!--          
            <div class="search">
                <form class="w3-center" action="<%= search_player_path %>" method="get">
                    <input class="form-control mr-sm-2" type="search" placeholder="Cerca Giocatore..." aria-label="Search">
                    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Cerca</button>
                </form>
            </div>
-->
            <div class="search">
                <form action="<%= search_player_path %>" method="get" class="form-inline">
                    <input class="form-control mr-sm-2" type="text" placeholder="Cerca Giocatore..." name="summonerName">
                    <button class="btn btn-success my-2 my-sm-0" type="submit">Cerca</button>
                </form>
            </div>
            

            <%= link_to new_ad_path do %>
                <%if(session[:game]=="LOL"); @team_btn_color = "btn-primary" end%>
                <%if(session[:game]=="VALO"); @team_btn_color = "btn-danger" end%>
                <button id="team-btn" class="btn <%= @team_btn_color %> btn-lg">Crea il tuo team!</button>
            <% end %>
        </div>

        <!-- BACHECA ANNUNCI -->
        <div class="board-section" style="background-color:<%= @color %>">
            <div id="titolo-bacheca-home">
                <%= if(session[:game]=='LOL'); "ANNUNCI LOL" end%>
                <%= if(session[:game]=='VALO'); "ANNUNCI VALO" end%>
            </div>
            
            <div class="annuncio-container">
                <% for annuncio in @annunci_home do%>
                  <% user = User.find_by(id: annuncio.user_id) %>
                   <% if user.present?%>
                    <div class="annuncio_home">
                        <div class="owner">
                        <span><%= user.username %></span> 
                        </div>
                        <div class="roles">
                            <% if annuncio.mode == 'Aram'%>
                                Aram
                            <%else%>
                                icone ruoli 
                            <%end%>
                        </div>
                    </div>
                   <%end%>
                <%end%>
            </div>

            <%if(session[:game] == 'LOL') %>
               <%@board_btn_color = "btn-dark" %>
            <%elsif(session[:game] == 'VALO') %>
                <%@board_btn_color = "btn-light" %>
            <% end %>

            <%= link_to board_path do %>
                <button class="btn <%= @board_btn_color %>"> VEDI TUTTI </button>
            <% end %>

        </div> 

        <!-- SEZIONE NOTIZIE -->    
        <div class="news-section center-block" style="background-color:<%= @color %>">

            <h1> NEWS </h1>
            
            <% if session[:game] == 'LOL' %>
                <div class="champ-rotation">
                        <% for champid in @rotation_champs do %>
                            <%= image_tag "champions/"+champid.to_s+".png", width:80,height:80, class:'champImg' %>
                        <% end %>
                </div>
            <% end %>

            <div class="news-container">
                <div class="news">

                    <!-- Aggiunto collegamento alla pagina news con parametro -->
                    <%if(session[:game] == 'LOL') %>
                     <%= link_to news_path do %>
                        <% @board_btn_color = "btn-dark" %>
                        <button class="btn <%= @board_btn_color %>" style="margin-bottom:1em;"> VEDI NOTIZIE </button>
                     <% end %>
                    <%elsif(session[:game] == 'VALO') %>
                     <%= link_to news_path do %>
                        <%@board_btn_color = "btn-light" %>
                        <button class="btn <%= @board_btn_color %>"> VEDI TUTTI </button>
                     <% end %>
                    <% end %>
                
                <%# 
                    <div class="thread-container">
                        <% threads.each do |thread| %/>
                        <div class="thread">
                            <a href="<%= thread[:url] %/>"><%= thread[:title] %/></a>
                        </div>
                        <% end %/>
                    </div>
                %>
            </div>
        </div>

        <!-- TASTO SCRIVI -->
        <%= link_to home_path do %>
            <button id="scrivi">
                Scrivi
            </button>
        <% end %>


    </div>
    
</body>

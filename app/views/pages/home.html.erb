<body>
    <div class="main-container">
        <div class="container-1" style="height:300px;">
            <div class="w3-display-center board-section">
            <%= link_to "Login", new_user_session_path, class: "btn btn-primary" %>

            </div>  
            <!-- CREA TEAM -->
            <div class="w3-display-left team-section">
                <%= link_to create_team_path do %>
                    <button id="team-btn" class="btn btn-primary">Crea il tuo team!</button>
                <% end %>
            </div>

            <!-- BACHECA ANNUNCI -->
            <div class="w3-display-right board-section">
                Bacheca annunci
            </div>    
        </div>

        <div class="container-2">
            <div class="news-section">
                Notizie su Luca
            </div>
        </div>
    </div>

<head>
    <style>

        .container-bacheca {
            padding: 0;
            margin: 0;
            height:100vh;
            
            position: relative;
            scroll-behavior: smooth;
        }

        .sfondo-bacheca {
            height: 85%;
            width: 80%;
            border-radius: 1.5em;
            
            position: absolute;
            top:30%;
            left:50%;
            transform: translate(-50%, -30%);

            display:flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            row-gap: 15px;
        
            background-color: royalblue;
        }

        #titolo-bacheca {
            width: 90%;
        }

        #titolo-bacheca > span {
            font-weight: bold;
            word-spacing: 10px;

            flex-basis: 20%;
        }

        #bacheca {
            border: 2px dotted black;

            flex-basis: 80%;
            width: 85%;

            margin-bottom: 10px;

            overflow-y: auto;
            scroll-behavior: smooth;
        }

        .thread {
      padding: 10px;
      border-bottom: 1px solid #eee;
    }

    </style>
</head> 

<body>

    <div class="container-bacheca">
        <div class="sfondo-bacheca">

            <div id="titolo-bacheca" class="w3-panel w3-center w3-white w3-round-medium">
                <span>
                    ANNUNCI
                    <i class="fa fa-refresh" style="font-size:24px"></i>
                    <!-- va implementato il refresh che aggiorni la bacheca -->
                </span>
            </div>

            <div id="bacheca">
                <!-- annunci -->
                <% for a in 1..20 do%>
                <div class="thread"> annuncio
                    </div>
                <%end%>
            </div>

        </div>
    </div>

</body>
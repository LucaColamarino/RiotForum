<%= form_with(model: newpost, url: '/news/newpost') do |form| %>
    <div>
      <%= form.label :title %><br>
      <%= form.text_field :title %>
      <% newpost.errors.full_messages_for(:title).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>
  
    <div>
      <%= form.label :content %><br>
      <%= form.text_area :content %><br>
      <% newpost.errors.full_messages_for(:body).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>
  
    <div>
      <%= form.submit %>
    </div>
  <% end %>
  
<div class="container">
    <header class="header">

      <!-- |RiotForum x x x x| -->
      <div class="header-left">
        <span class="sito">RiotForum</span>
      </div>

      <% if user_signed_in? %>
        <!-- | x x x x Profilo| -->
      <div class="header-right">
        <div class="dropdown">
          <button class="btn btn-warning dropdown-toggle profilo" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <%= current_user.email %>
          </button>
          <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
            <a class="dropdown-item" href="/profile">Profilo</a>
            <a class="dropdown-item" href="/settings">Impostazioni</a>
            <div class="dropdown-divider"></div>
            <a class="dropdown-item" href="#"><%= button_to "Logout", destroy_user_session_path, method: :delete, form_class: "d-inline" , class: "btn btn-primary ", style: "background-color: #df7e23;" %></a>
          </div>
        </div>
      </div>
<% else %>
        <!-- |LOGIN| -->
      <div class="header-right">
<%= button_to "Login", new_user_session_path, method: :get, class: "btn btn-primary ", style: "background-color: #df7e23;" %>
      </div>
<% end %>


    </header>
</div>